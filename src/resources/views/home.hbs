<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<!-- HERO SLIDER -->
<div id="dvHeroSlider" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">

  <div class="carousel-indicators">
    <button type="button" data-bs-target="#dvHeroSlider" data-bs-slide-to="0" class="active"></button>
    <button type="button" data-bs-target="#dvHeroSlider" data-bs-slide-to="1"></button>
    <button type="button" data-bs-target="#dvHeroSlider" data-bs-slide-to="2"></button>
  </div>

  <div class="carousel-inner">

    <div class="carousel-item active">
      <div class="dv-slide-bg" style="background-image: url('/imgs/home/home1.jpg');"></div>
      <div class="carousel-caption">
        <h1 class="dv-title">Bước Cùng<br>Thế Hệ Trẻ Việt Nam</h1>
        <p class="dv-desc">Là phương châm hoạt động của Quỹ học bổng DungVi</p>
        <a href="/about" class="btn btn-primary btn-lg rounded-pill px-4 py-2">Tìm Hiểu Thêm</a>
      </div>
    </div>

    <div class="carousel-item">
      <div class="dv-slide-bg" style="background-image: url('/imgs/home/home2.jpg');"></div>
      <div class="carousel-caption">
        <h1 class="dv-title">Do Sinh Viên<br>Vì Sinh Viên</h1>
        <p class="dv-desc">DungVi hoạt động nhờ sự tham gia của các bạn trẻ</p>
        <a href="/community" class="btn btn-primary btn-lg rounded-pill px-4 py-2">Tham Gia</a>
      </div>
    </div>

    <div class="carousel-item">
      <div class="dv-slide-bg" style="background-image: url('/imgs/home/home3.jpg');"></div>
      <div class="carousel-caption">
        <h1 class="dv-title">Vì Thế Hệ<br>Tương Lai</h1>
        <p class="dv-desc">Hãy cùng DungVi hỗ trợ sinh viên nghèo vượt khó</p>
        <a href="/donate" class="btn btn-primary btn-lg rounded-pill px-4 py-2">Quyên Góp</a>
      </div>
    </div>

  </div>

  <button class="carousel-control-prev" type="button" data-bs-target="#dvHeroSlider" data-bs-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </button>

  <button class="carousel-control-next" type="button" data-bs-target="#dvHeroSlider" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
  </button>
</div>



<!-- HELP SECTION -->
<section class="dv-help-section container py-5">

  <div class="row align-items-center">
    
    <div class="col-md-6 text-center text-md-start mb-4 mb-md-0">
      <h2 class="dv-help-title fw-bold mb-4">
        Bạn là sinh viên đang cần sự<br>trợ giúp ?
      </h2>

      <p class="dv-help-desc mb-4">
        Học bổng DungVi hướng tới các bạn sinh viên nghèo vượt khó cần sự trợ giúp
        về tài chính để giảm gánh nặng cơm áo gạo tiền và có nhiều thời gian hơn cho con đường học tập.
        Hãy mạnh dạn chia sẻ với DungVi thông qua hồ sơ học bổng.
      </p>

      <a href="/about-us" class="btn btn-primary btn-lg rounded-pill px-4 py-2">
        Tìm Hiểu Thêm
      </a>
    </div>


    <div class="col-md-6">
      <div class="row g-4">

        <!-- Box 1 -->
        <div class="col-6">
          <div class="dv-help-box text-center p-4">
            <i class="bi bi-journal-check dv-icon"></i>
            <h5 class="fw-bold mt-3">Hướng Dẫn</h5>
          </div>
        </div>

        <!-- Box 2 -->
        <div class="col-6">
          <div class="dv-help-box text-center p-4">
            <i class="bi bi-cloud-upload dv-icon"></i>
            <h5 class="fw-bold mt-3">Nộp Hồ Sơ Online</h5>
          </div>
        </div>

        <!-- Box 3 -->
        <div class="col-6">
          <div class="dv-help-box text-center p-4">
            <i class="bi bi-question-circle dv-icon dv-icon-faq"></i>
            <h5 class="fw-bold mt-3">Hỏi Đáp (FAQ)</h5>
          </div>
        </div>

        <!-- Box 4 -->
        <div class="col-6">
          <div class="dv-help-box text-center p-4">
            <i class="bi bi-bar-chart-line dv-icon dv-icon-stat"></i>
            <h5 class="fw-bold mt-3">Thống Kê</h5>
          </div>
        </div>

      </div>
    </div>

  </div>

</section>

<!-- STATISTICS SECTION -->
<section class="dv-stats-section py-5">
  <div class="container text-center">

    <h2 class="dv-stats-title fw-bold mb-5">
      Thống kê học bổng
    </h2>

    <div class="row justify-content-center align-items-center">

      <div class="col-md-3 col-12 mb-4 mb-md-0">
        <div class="dv-stats-number dv-blue">911</div>
        <div class="dv-stats-label">hồ sơ nhận được</div>
      </div>

      <div class="col-md-1 d-none d-md-flex justify-content-center">
        <div class="dv-divider"></div>
      </div>

      <div class="col-md-3 col-12 mb-4 mb-md-0">
        <div class="dv-stats-number dv-blue">164</div>
        <div class="dv-stats-label">suất học bổng</div>
      </div>

      <div class="col-md-1 d-none d-md-flex justify-content-center">
        <div class="dv-divider"></div>
      </div>

      <div class="col-md-3 col-12">
        <div class="dv-stats-number dv-yellow">771</div>
        <div class="dv-stats-label">triệu VND được trao</div>
      </div>

    </div>

  </div>
</section>

<!-- HOME NEWS SECTION -->
<section class="dv-home-news-section py-5">
  <div class="container">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold mb-0">Tin tức mới nhất</h2>
      <a href="/news" class="btn btn-outline-primary rounded-pill px-4">Xem thêm</a>
    </div>

    <div class="row">

      {{#each news}}
      <div class="col-md-4 mb-4">
        <a href="/news/{{this.slug}}" class="dv-news-card d-block">

          <div class="dv-news-thumb">
            <img src="{{this.thumbnail}}" alt="{{this.name}}">

            <div class="dv-news-date">
              <div class="day">{{formatDay this.createdAt}}</div>
              <div class="month">{{formatMonthShort this.createdAt}}</div>
            </div>
          </div>

          <div class="dv-news-content">
            <h3 class="dv-news-title">{{truncate this.name 110}}</h3>
            <p class="dv-news-desc">{{truncate this.description 150}}</p>

            <div class="dv-news-footer d-flex justify-content-between text-muted mt-3">
              <span><i class="bi bi-person"></i> {{this.author}}</span>
              <span><i class="bi bi-chat"></i> {{this.comments}} comments</span>
            </div>
          </div>

        </a>
      </div>
      {{/each}}

    </div>

  </div>
</section>
