{{!-- =================== OFFCANVAS TÀI KHOẢN =================== --}}
{{#if user}}
<div class="offcanvas offcanvas-end text-bg-dark"
     tabindex="-1"
     id="userOffcanvas"
     aria-labelledby="userOffcanvasLabel">

  <div class="offcanvas-header">
    <h5 class="offcanvas-title fw-bold" id="userOffcanvasLabel">
      {{user.name}}
      <span class="badge bg-secondary ms-2 text-uppercase">{{user.role}}</span>
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
  </div>

  <div class="offcanvas-body d-flex flex-column gap-3">


    {{!-- =================== ADMINISTRATOR =================== --}}
    {{#if (eq user.role "admin")}}
      <a href="/admin/users" class="btn btn-outline-light w-100 text-start">Quản lý người dùng</a>
      <a href="/author/posts/add-new" class="btn btn-outline-light w-100 text-start">Đăng bài</a>
      <a href="/author/stored/news" class="btn btn-outline-light w-100 text-start">Bài viết của tôi</a>
      <hr class="border-secondary">
    {{/if}}


    {{!-- =================== AUTHOR =================== --}}
    {{#if (eq user.role "author")}}
      <a href="/author/posts/add-new" class="btn btn-outline-light w-100 text-start">Đăng bài</a>
      <a href="/author/stored/news" class="btn btn-outline-light w-100 text-start">Bài viết của tôi</a>
      <hr class="border-secondary">
    {{/if}}


    {{!-- =================== MEMBER =================== --}}
    {{#if (eq user.role "member")}}
      <hr class="border-secondary">
    {{/if}}


    {{!-- =================== LOGOUT (tất cả role) =================== --}}
    <a href="/logout" class="btn btn-danger w-100 text-start mt-2">
      Đăng xuất
    </a>

  </div>

</div>
{{/if}}
