<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="card shadow-sm p-4" style="width: 380px; border-radius: 12px;">
    
    <h3 class="text-center fw-bold mb-3">Đăng nhập Admin</h3>

    {{#if error}}
      <div class="alert alert-danger py-2">{{error}}</div>
    {{/if}}

    <form 
      id="adminLoginForm"
      method="POST" 
      action="{{loginAction}}" 
      class="d-flex flex-column gap-3"
      novalidate
      autocomplete="off"
    >

      <div>
        <label class="form-label fw-semibold">Email</label>
        <input 
          type="email" 
          class="form-control" 
          name="email"
          id="email"
          placeholder="Nhập email"
          required
        >
      </div>

      <div>
        <label class="form-label fw-semibold">Mật khẩu</label>
        <input 
          type="password" 
          class="form-control" 
          name="password"
          id="password"
          placeholder="Nhập mật khẩu"
          required
        >
      </div>

      <button type="submit" class="btn btn-dark w-100 fw-semibold">
        Đăng nhập
      </button>
    </form>

  </div>
</div>

<script src="/js/admin/login.js" defer></script>
