<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="card shadow-sm p-4" style="width: 380px; border-radius: 12px;">
    
    <h3 class="text-center fw-bold mb-3">Đăng nhập</h3>

    {{#if error}}
      <div class="alert alert-danger py-2">{{error}}</div>
    {{/if}}

    <form method="POST" action="/member/login" class="d-flex flex-column gap-3">

      <div>
        <label for="account" class="form-label fw-semibold">Email hoặc số điện thoại</label>
        <input 
          type="text" 
          class="form-control" 
          name="account" 
          id="account"
          placeholder="Nhập email hoặc số điện thoại"
          required
        >
      </div>

      <div>
        <label for="password" class="form-label fw-semibold">Mật khẩu</label>
        <input 
          type="password" 
          class="form-control" 
          name="password" 
          id="password"
          placeholder="Nhập mật khẩu"
          required
        >
      </div>

      <button type="submit" class="btn btn-dark w-100 fw-semibold">
        Đăng nhập
      </button>

      <div class="text-center mt-2">
        Bạn chưa có tài khoản?
        <a href="/member/register" class="fw-semibold">Tạo tài khoản</a>
      </div>

    </form>
  </div>
</div>
